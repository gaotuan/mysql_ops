vrrp_instance VI_1 {
    state MASTER
    interface ens33
    virtual_router_id 51
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        172.168.94.100
    }
}

virtual_server 172.168.94.100 3306 {
    delay_loop 6
    lb_algo rr
    lb_kind NAT
    persistence_timeout 50
    protocol TCP

    real_server 172.168.94.13 3306 {
        weight 1
        TCP_CHECK {
            connect_port 3306
            connect_timeout 30
        }
    }
    real_server 172.168.94.14 3306 {
